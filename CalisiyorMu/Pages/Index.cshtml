@page
@model IndexModel
@{
    ViewData["Title"] = "Cenk çalışıyor mu?";
}


<script src="~/assets/js/Sound.js"></script>


<main class="d-flex flex-column align-items-center justify-content-xl-center" style="margin: 7%;height: 100vh;margin-top: 27%;">

    <div class="d-lg-flex align-items-lg-center">
        <span style="color: rgb(23,162,184);font-family: 'Roboto Condensed', sans-serif;font-size: 2.5vw;">Saat:</span>
        <div class="d-inline-block" id="time" style="color: rgb(109,84,8);font-size: 4vw;margin-top: 0px;"></div>
        <span id='clickableAwesomeFont' style="margin-left:5px; color: rgb(109,84,8);"></span>
    </div>

    @if (Model.Study.IsWorking == true)
    {

        <h1 class="display-1 text-center pulse animated" style="        font-style: normal;
        letter-spacing: 16px;
        font-family: 'Roboto Condensed', sans-serif;
        font-size: 10vw;
        margin: 42px;
        padding: 0px;
        margin-bottom: 42px;
        color: rgb(137,11,23);">
            ÇALIŞIYOR
        </h1>
        <div>
            <p class="d-flex d-xl-flex align-items-center align-items-xl-center"><span class="text-info" style="font-family: 'Roboto Condensed', sans-serif;font-size: 2.5vw;">Başlama Zamanı:&nbsp;</span><span style="font-size: 4vw;color: rgb(109,84,8);">@Model.StartTimeTurkey.TimeOfDay.ToString(@"hh\:mm")</span></p>
        </div>
        <div style="margin-top: 13px;padding: 0px;padding-bottom: 40px;">
            <p class="d-flex d-xl-flex align-items-center align-items-xl-center" style="margin: 0px;">
                <span class="text-info" style="font-family: 'Roboto Condensed', sans-serif;font-size: 4vw;">Geçen Süre:&nbsp;</span><span style="font-size: 5vw;color: rgb(255, 149, 0);">@Model.ElapsedHours Saat</span><span style="font-size: 7vw;color: rgb(255, 149, 0);">@Model.ElapsedMinutes DK</span>
                @if (Model.ElapsedMinutes > 40)
                {<span class="pulse animated infinite" style="display:inline-block;font-size: 2vw;color: rgb(147, 215, 0);">Uzatmalarda..</span>}
            </p>
        </div>
        <div style="margin-top: 6px;margin-bottom: 32px;">
            <p class="d-flex d-xl-flex align-items-center align-items-xl-center"><span class="text-info" style="font-family: 'Roboto Condensed', sans-serif;font-size: 3vw;">Tahmini Bitiş Zamanı:</span><span style="font-size: 4vw;color: rgb(109,84,8);">@Model.StartTimeTurkey.AddMinutes(40).TimeOfDay.ToString(@"hh\:mm")</span></p>
        </div>
        <div>
            <p class="d-flex d-xl-flex align-items-center align-items-xl-center"><span class="text-info" style="font-family: 'Roboto Condensed', sans-serif;font-size: 2.5vw;">Tahmini bir sonraki çalışmaya başlama zamanı:</span><span style="font-size: 3vw;color: rgb(109,84,8);">@Model.StartTimeTurkey.AddMinutes(46).TimeOfDay.ToString(@"hh\:mm")</span></p>
        </div>

    }
    else
    {
        <h1 class="display-1 text-center pulse animated" style="font-style: normal;letter-spacing: 16px;font-family: 'Roboto Condensed', sans-serif;font-size: 10vw;margin: 42px;padding: 0px;margin-bottom: 42px;color: rgb(39,179,5);text-shadow: 0 0 3px rgb(69, 211, 35);">ÇALIŞMIYOR</h1>
        <script type="text/javascript">
            if (isSoundOn) {
                context = new AudioContext();
                beep(80, 220, 4);
            }
        </script>
        <div style="margin-bottom: 30px;">
            <p class="d-flex d-xl-flex align-items-center align-items-xl-center"><span class="text-info" style="font-family: 'Roboto Condensed', sans-serif;font-size: 2.5vw;">En son çalışmanın bittiği zaman:</span><span style="font-size: 3vw;color: rgb(109,84,8);">@Model.EndTimeTurkeyStr</span></p>
        </div>
    }

    <div>
        <p class="d-flex d-xl-flex align-items-center align-items-xl-center"><span class="text-info" style="font-family: 'Roboto Condensed', sans-serif;font-size: 2.5vw;">Bugün Tamamlanan Çalışma Sayısı:</span><span style="font-size: 3vw;color: rgb(109,84,8);">@Model.Pomodoro</span></p>
    </div>
</main>


<script src="lib\microsoft\signalr\dist\browser\signalr.js"></script>
<script src="assets\js\RealTime.js"></script>
<script src="assets/js/Clock-Real-Time.js"></script>